<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

   <modelVersion>4.0.0</modelVersion>

   <parent>
      <groupId>org.eclipse.ote.build</groupId>
      <artifactId>base</artifactId>
      <version>0.11.0-SNAPSHOT</version>
      <relativePath>../base</relativePath>
   </parent>

   <groupId>org.eclipse.ote.build</groupId>
   <artifactId>core</artifactId>
   <packaging>pom</packaging>
   <name>OTE - Maven Build Parent</name>
   <version>1.0.0-SNAPSHOT</version>

   <properties>
      <gitRepoRoot>file:../../../</gitRepoRoot>
   </properties>

   <profiles>
	    <profile>
			<id>ote.p2</id>
			<activation>
				<property>
					<name>ote.p2</name>
				</property>
			</activation>
			<repositories>
				<repository>
					<id>ote.p2</id>
					<layout>p2</layout>
					<url>${ote.p2}</url>
				</repository>
			</repositories>
		</profile>
    <profile>
			<id>osee.ote.p2</id>
			<activation>
				<property>
					<name>osee.ote.p2</name>
				</property>
			</activation>
			<repositories>
				<repository>
					<id>osee.ote.p2</id>
					<layout>p2</layout>
					<url>${osee.ote.p2}</url>
				</repository>
			</repositories>
		</profile>

      <profile>
         <id>org.eclipse.ote.p2</id>
         <activation>
            <property>
               <name>org.eclipse.ote.p2</name>
            </property>
         </activation>
         <repositories>
            <repository>
               <id>org.eclipse.ote.p2</id>
               <layout>p2</layout>
               <url>${gitRepoRoot}/org.eclipse.ote/org.eclipse.ote.p2/target/repository/</url>
            </repository>
         </repositories>
      </profile>

      <profile>
         <id>ote.precompiled.p2</id>
         <activation>
            <property>
               <name>ote.precompiled.p2</name>
            </property>
         </activation>
         <repositories>
            <repository>
               <id>precompiled-site</id>
               <layout>p2</layout>
               <url>${ote.precompiled.p2}</url>
            </repository>
         </repositories>
      </profile>
	    <profile>
			<id>osee.x.p2</id>
			<activation>
				<property>
					<name>osee.x.p2</name>
				</property>
			</activation>
			<repositories>
				<repository>
					<id>osee-x-site</id>
					<layout>p2</layout>
					<url>${osee.x.p2}</url>
				</repository>
			</repositories>
		</profile>

   </profiles>


</project>
